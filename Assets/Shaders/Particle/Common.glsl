#define ALPHA_OVER_LIFETIME 0 //decreasing alpha over lifetime
#define SIZE_OVER_LIFETIME 1 //decreasing size over lifetime
#define ALPHA_SIZE_DECR_OVER_LIFETIME 2  //decreasing alpha and size over lifetime
